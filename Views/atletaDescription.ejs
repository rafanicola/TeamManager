<%- include("partials/header") %> 

<div class="container-fluid">
    <div class="container">
        <div class="head">
            <h1><%= player.playerName %></h1>
        </div>
        <div class="player-content">
            <div class="row">
                <div class="col-lg-3">
                    <h5>Idade</h5>
                    <p><%= player.age %></p>
                </div>
                <div class="col-lg-3">
                    <h5>Gênero</h5>
                    <p><%= player.gender %></p>
                </div>
                <div class="col-lg-3">
                    <h5>Posição Principal</h5>
                    <p><%= player.gamePosition %></p>
                </div>
                <div class="col-lg-3">
                    <h5>Nível do atleta</h5>
                    <p><%= player.playerLevel %></p>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3">
                    <h5>Telefone</h5>
                    <p><%= player.telephone %></p>
                </div>
                <div class="col-lg-3">
                    <h5>E-Mail</h5>
                    <p><%= player.email %></p>
                </div>
            </div>
        </div>

        <div class="player-actions">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#relacionamentoEquipeAtletaModal">Relacionamento Equipe vs Atleta</button>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="relacionamentoEquipeAtletaModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">Equipes</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form action="/adm/atletas/playerdesc/<%= player._id %>" method="post">
                    <div class="modal-body">
                        <input type="text" value="<%= player.id %>" name="userId" hidden>
                        <table>
                            <thead>
                                <tr>
                                    <th>Unidade</th>
                                    <th>Associar ao Atleta</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!--% teams.forEach(function(team) { %>
                                    <tr>
                                        <td>< team.teamName %></td>
                                        <td class="center">
                                            <input type="checkbox" name="teamCheckboxes" value="< team.id %>">
                                        </td>
                                    </tr>
                                < }) %-->
                                </tbody>
                            </table>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Save changes</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div class="table-records">
            <table>
                <thead>
                    <tr>
                        <th>Equipes do Atleta</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <!--% associations.forEach(function(association){ %>
                        <tr>
                            <td>< association.fkTeamId%></td>
                            <td>
                                <form action="/adm/atletas/playerdesc/deleteAssociation" method="post">
                                    <input type="text" name="playerId" value="<player.id %>" hidden>
                                    <button class="btn btn-outline-dark" type="submit" name="deleteAssociation" id="deleteAssociation" value="< association.id %>"><i class="fas fa-trash-alt"></i></button>
                                </form>
                            </td>
                        </tr>
                   < }) %--> 
                </tbody>
            </table>
        </div>


        
    </div>
</div>

<%- include("partials/footer") %> 