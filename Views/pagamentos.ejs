<%- include("partials/header") %> 


<div class="container-fluid">
    <div class="container">
        <div class="page-start">
            <h1>Relatórios de Pagamento</h1>
        </div>

        <div class="actions">
            <!--Modal Adicionar Atleta button-->
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addPaymentModal" id="addPayment">Adicionar Pagamento</button>
        </div>

        <!--Modal Adicionar Equipe-->
        <div class="modal fade" id="addPaymentModal" name="addPayment" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="modalTitle">Adicionar Pagamento</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form action="/adm/pagamento" method="post" id="formAtletas" name="formAtletas">
                    <div class="modal-body team-input-modal">
                        <label for="">Período de Pagamento</label>
                        <input type="month" name="periodoPagamento" id="payPeriod">
                        <br>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <input type="submit" class="btn btn-primary" value="Salvar" id="btnSalvar">
                    </div>
                </form>
              </div>
            </div>
        </div>
        
        <div class="table-records">
            <table>
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Período Pagamento</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% items.forEach((item) => { %>
                        <tr>
                            <td><%= item._id %></td>
                            <td><%= item.periodo %></td>
                            <td class="table-item">
                                <form action="/adm/pagamento/periodoPagamento/<%= item._id %>" method="post">
                                    <button type="submit" name="deletePeriod" id="btnDeletePeriod" class="btn btn-outline-dark"><i class="fas fa-trash-alt"></i></button>
                                </form>
                                <button class="btn btn-outline-dark"><i class="fas fa-dollar-sign"></i></button>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>  
        </div>
    </div>
</div>
<script src="/js/atletas.js"></script>
<%- include("partials/footer") -%>